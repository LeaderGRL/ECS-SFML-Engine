namespace LeaderEngine;

table vec2
{
	x:float;
	y:float;
}

table Transform
{
	position:vec2;
	rotation:float;
	scale:vec2;
}

table Sprite2DComponent
{
	 texture_name:string;
}

table Animation2DComponent
{
	animation_name: string;
    should_loop: bool;
	is_animating: bool;
}

table BoxColliderComponent
{
	size:vec2;
}

union Component
{
	Sprite2DComponent,
	BoxColliderComponent
}

table Entity
{
	id:int;
	transform:Transform;
	components:[Component];
}