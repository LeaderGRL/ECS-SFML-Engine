namespace LeaderEngine;

table Vec2
{
	x:float;
	y:float;
}

table Transform
{
	position:Vec2;
	rotation:float;
	scale:Vec2;
}

table Sprite2DComponent
{
	 texture_name:string;
}

table Animation2DComponent
{
	animation_name: string;
    should_loop: bool;
	is_animating: bool;
}

union Component
{
	Sprite2DComponent,
	Animation2DComponent,
}

table EntitySchema
{
	id:int;
	transform:Transform;
	components:[Component];
}

root_type EntitySchema;